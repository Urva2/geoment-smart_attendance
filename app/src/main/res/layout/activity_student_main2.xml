<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appsback"
    android:padding="16dp">

    <!-- PRN EditText (Now Non-Editable) -->
    <EditText
        android:id="@+id/prnEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fetching PRN..."
        android:focusable="false"
        android:clickable="false"
        android:background="@drawable/edittext2"
        android:textColor="#000000" />

    <!-- Fetch PRN Button -->
    <Button
        android:id="@+id/fetchPRNButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prnEditText"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_modified"
        android:textColor="@color/black"
        android:text="Fetch PRN" />

    <!-- Subject Name EditText -->
    <EditText
        android:id="@+id/editText2"
        android:background="@drawable/edittext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fetchPRNButton"
        android:layout_marginTop="8dp"
        android:hint="Enter Subject Name"
        android:visibility="gone" />

    <!-- Subject ID EditText -->
    <EditText
        android:id="@+id/editText3"
        android:background="@drawable/edittext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText2"
        android:layout_marginTop="8dp"
        android:hint="Enter Subject ID"
        android:visibility="gone" />

    <!-- Fetch Lecture Details Button -->
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText3"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_modified"
        android:text="Show Lecture Details"
        android:visibility="gone" />

    <!-- Details TextView -->
    <TextView
        android:id="@+id/detailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="#000" />

    <!-- Book Button -->
    <Button
        android:id="@+id/nextStepButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_modified"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:text="Book" />

</RelativeLayout>